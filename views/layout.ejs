<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- 
		All pizza images were used with permision from Gustavo Zambelli.
		Please checkout his 52 Pizza Slice Project: https://goo.gl/JjSWZP
		-->

		<meta charset="utf-8">
		<meta name="google" content="notranslate">
		<meta http-equiv="Content-Language" content="en">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>You Are Pizza <%= titleVar %></title>

		<!-- Bootstrap CSS -->
		<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href="/stylesheet/main.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

		<link rel="icon" href="/images/favicon.ico" />
		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
	<body>

		<div class="container">
			<div class="header clearfix">
				<nav>
					<ul class="nav nav-pills pull-right">
						<li><a href="/">Home</a></li>
						<% if (!currentUser) { %>
							<li><a data-toggle="modal" href="#signup-modal">Sign Up</a></li>
							<li><a data-toggle="modal" href="#signin-modal">Sign In</a></li>
						<% } else { %>
							<li><a href="/profile">Profile</a></li>
							<li><a href="/logout">Logout</a></li>
						<% } %>
					</ul>
				</nav>
				<a href="/"><h3 class="text-muted">You Are Pizza</h3></a>
			</div>

			<hr>

			<div class="container">
				<% include alerts %>
			</div>
			<%- body %>

			<hr>

		</div>

		<!-- Start of signup modal -->
		<div class="modal fade" id="signup-modal">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h3>LET'S BE A MEMBER</h3>
					</div>

					<hr>

					<div class="modal-body">

						<form action="/signup" method="POST" role="form">
							<div class="row">
								<div id="first-modal" class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
									<div class="form-group">
										<label for="first-name">Name</label>
										<input type="text" class="form-control input-lg" name="firstName" placeholder="First" id="first-name" style="text-transform: capitalize;" required>
									</div>
								</div>
								<div id="last-modal" class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
									<div class="form-group">
										<label for="last-name">&nbsp;</label>
										<input type="text" class="form-control input-lg" name="lastName" placeholder="Last" id="last-name" style="text-transform: capitalize;" required>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
									<div class="form-group">
										<label for="email">Email address</label>
										<input type="email" class="form-control input-lg" name="email" placeholder="Email" id="email" required>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
									<div class="form-group">
										<label for="password">Create a password</label>
										<input type="password" class="form-control input-lg" name="password" placeholder="Password (8 character minimum)" minlength="8" maxlength="99" required>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
									<input type="password" class="form-control input-lg" name="passwordConfirm" placeholder="Confirm Password" minlength="8" maxlength="99" required>
								</div>
							</div>
					</div>

					<hr>

					<div class="modal-footer">
						<button type="button" class="btn btn-lg btn-default" data-dismiss="modal">CANCEL</button>
						<button type="submit" class="btn btn-lg btn-primary">SIGN UP</button>
					</div>

					</form>
				</div>
			</div>
		</div>
		<!-- End of signup modal -->

		<!-- Start of signin modal -->
		<div class="modal fade" id="signin-modal">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h3>LET'S SEE WHAT YOU HAD</h3>
					</div>

					<hr>

					<div class="modal-body">

						<form action="/signin" method="POST" role="form">
							<div class="row">
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
									<div class="form-group">
										<label for="email">Email address</label>
										<input type="email" class="form-control input-lg" name="email" placeholder="Email" id="email" required>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
									<div class="form-group">
										<label for="password">Password</label>
										<input type="password" class="form-control input-lg" name="password" placeholder="Password" minlength="8" maxlength="99" required>
									</div>
								</div>
							</div>
					</div>

					<hr>

					<div class="modal-footer">
						<button type="button" class="btn btn-lg btn-default" data-dismiss="modal">CANCEL</button>
						<button type="submit" class="btn btn-lg btn-primary">SIGN IN</button>
					</div>

					</form>
				</div>
			</div>
		</div>
		<!-- End of signin modal -->

		<!-- jQuery -->
		<script src="//code.jquery.com/jquery.js"></script>
		<!-- Bootstrap JavaScript -->
		<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
		<script type="text/javascript" src="/js/app.js"></script>
		<script type="text/javascript" src="/js/delete.js"></script>
	</body>
</html>
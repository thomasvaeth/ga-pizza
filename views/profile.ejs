<% titleVar = user.firstName + "'s' Profile" %>

<div class="row profile-row">
	<div class="col-xs-12">
		<h3 class="text-transform">Let's See Where You Ate</h3>
	</div>
	<div class="col-xs-12">
		<div id="profile-map"></div>
	</div>
	<div class="col-xs-12">
		<% if (returningUser) { %>
			<a href="/search?latitude=<%= pizzas[pizzas.length - 1].latitude%>&longitude=<%= pizzas[pizzas.length - 1].longitude %>"><button class="btn btn-lg btn-default text-transform" role="button" type="submit">Let's Find More</button></a>
		<% } else { %>
			<a href="/#search"><button class="btn btn-lg btn-default text-transform" role="button" type="submit">Let's Find Somewhere</button></a>
		<% } %>
	</div>
</div>

<% if (returningUser) { %>
	<script>var pizzas = <%- JSON.stringify(pizzas) %></script>
	<script type="text/javascript" src="/js/profile-map.js"></script>
<% } else { %>
	<script type="text/javascript" src="/js/empty-profile-map.js"></script>
<% } %>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDp-jDudRLSFGy_owucJ4ZO36CU1vVOk4I&callback=initMap"></script>
<% titleVar = '| Search' %>
<% var pizzaArr = ['pizza-01.png', 'pizza-02.png', 'pizza-03.png', 'pizza-04.png', 'pizza-05.png', 'pizza-06.png', 'pizza-07.png', 'pizza-08.png', 'pizza-09.png', 'pizza-10.png',] %>
<% var number %>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<h1>Pizza Around You!</h1>
</div>

<% for (var i = 0; i < 8; i++) { %>
	<a href="/search/<%= data.businesses[i].id %>">
		<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
			<div class="well">
				<% number = Math.floor(Math.random() * 10); %>
				<img class="pizza" src="/images/<%= pizzaArr[number] %>"><br>
				<%= data.businesses[i].name %>
			</div>
		</div>
	</a>
<% } %>